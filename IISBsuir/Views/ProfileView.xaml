<UserControl x:Class="IISBsuir.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:IISBsuir.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:m="clr-namespace:IIsHelper.Models;assembly=IIsHelper"
             d:DataContext="{d:DesignInstance vm:ProfileViewModel}"
             d:DesignHeight="500" d:DesignWidth="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshDataCommand}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" Margin="5 5 5 5" >
            <Rectangle DockPanel.Dock="Top" Width="180" Height="200"
                       StrokeThickness="3"
                       RadiusX="7" RadiusY="8">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="\Resources\Img\Person.png"></ImageBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Button DockPanel.Dock="Bottom" Height="25" Width="180" FontSize="14">Обновить фотографию</Button>
        </DockPanel>

        <DockPanel Grid.Row="1" Grid.Column="0" Margin="5 5 5 5">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock FontSize="16">Настройки доступа</TextBlock>
                <CheckBox FontSize="13">Общедоступный рейтинг</CheckBox>
                <CheckBox FontSize="13">Общедоступный профиль</CheckBox>
                <CheckBox FontSize="13">Ищу работу</CheckBox>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom">
                <TextBlock FontSize="16">Microsoft Office 365</TextBlock>
                <TextBlock FontSize="13">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Логин: {0}">
                            <Binding Path="StudentInfo.OfficeEmail"></Binding>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock FontSize="13">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Пароль: {0}">
                            <Binding Path="StudentInfo.OfficePassword"></Binding>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </DockPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock FontSize="22">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1} {2}">
                        <Binding Path="StudentInfo.LastName"/>
                        <Binding Path="StudentInfo.FirstName"/>
                        <Binding Path="StudentInfo.MiddleName"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock FontSize="22" 
                       Text="{Binding StudentInfo.BirthDate}"/>
            <TextBlock FontSize="22" 
                       Text="{Binding StudentInfo.Course, StringFormat=Курс: {0}}"/>
            <TextBlock FontSize="22" 
                       Text="{Binding Path=StudentInfo.Faculty, StringFormat=Факультет:{0}}"/>
        </StackPanel>
    </Grid>
</UserControl>
